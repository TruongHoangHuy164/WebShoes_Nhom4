@{
    string controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "Home";
    string action = ViewContext.RouteData.Values["action"]?.ToString() ?? "Index";

    var breadcrumbs = new Dictionary<string, List<string>>(StringComparer.OrdinalIgnoreCase)
    {
        { "Home", new List<string> { "Home" } },
        { "Shop", new List<string> { "Home", "Shop" } },
        { "Category", new List<string> { "Home", "Shop", "Fashion Category" } },
        { "Product", new List<string> { "Home", "Shop", "Product Detail" } },
        { "AboutUs", new List<string> { "Home", "AboutUs" } }
    };

        var breadcrumbList = breadcrumbs.GetValueOrDefault(controller, new List<string> { "Home" });
}

<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>@breadcrumbList.Last()</h1>
                <nav class="d-flex align-items-center">
                    @for (int i = 0; i < breadcrumbList.Count; i++)
                    {
                        if (i < breadcrumbList.Count - 1)
                        {
                            <a href="#">@breadcrumbList[i] <span class="lnr lnr-arrow-right"></span></a>
                        }
                        else
                        {
                            <a href="#">@breadcrumbList[i]</a>
                        }
                    }
                </nav>
                @* <p>Controller: @ViewContext.RouteData.Values["controller"]</p> *@
                @* <p>Action: @ViewContext.RouteData.Values["action"]</p> *@
            </div>
        </div>
    </div>
</section>



