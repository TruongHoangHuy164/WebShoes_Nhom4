            }

            .single-team-member h4 {
                font-size: 20px;
                font-weight: bold;
            }

            .single-team-member p {
                color: #777;
            }

        .social-icons a {
            margin: 0 10px;
            color: #555;
            font-size: 18px;
            transition: 0.3s;
        }

            .social-icons a:hover {
                color: #007bff;
            }
