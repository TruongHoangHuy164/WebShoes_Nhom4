@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Detail</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/detailproduct.css">
</head>
<body>

    <div class="container mt-5">
        <div class="row">
            <!-- Phần hình ảnh -->
            <div class="col-md-6">
                <div class="product-gallery">
                    <img id="main-image" src="shoe1.jpg" class="img-fluid">
                    <div class="thumbnail-row">
                        <img src="shoe1.jpg" class="thumbnail" onclick="changeImage(this)">
                        <img src="shoe2.jpg" class="thumbnail" onclick="changeImage(this)">
                        <img src="shoe3.jpg" class="thumbnail" onclick="changeImage(this)">
                        <img src="shoe4.jpg" class="thumbnail" onclick="changeImage(this)">
                    </div>
                </div>
            </div>

            <!-- Phần thông tin sản phẩm -->
            <div class="col-md-6">
                <h2 class="product-title">Nike Air Force 1 '07 LX</h2>
                <p class="product-category">Women's Shoes</p>
                <h3 class="product-price">3,829,000₫</h3>

                <div class="size-selection">
                    <label>Chọn Size:</label>
                    <div class="size-buttons">
                        <button class="size-btn">35.5</button>
                        <button class="size-btn">36</button>
                        <button class="size-btn">36.5</button>
                        <button class="size-btn">37.5</button>
                        <button class="size-btn">38</button>
                        <button class="size-btn">39</button>
                        <button class="size-btn">40</button>
                    </div>
                </div>

                <button class="btn btn-dark btn-add-cart">Add to Bag</button>
                <button class="btn btn-outline-dark">❤️ Favourite</button>

                <p class="product-description mt-4">
                    Comfortable, durable and timeless. This elevated version pairs the iconic '80s construction with soft genuine leather.
                </p>

                <ul class="product-details">
                    <li><strong>Colour:</strong> Sail/Sail/Pink Foam</li>
                    <li><strong>Style:</strong> HV5992-111</li>
                    <li><strong>Origin:</strong> China</li>
                </ul>

                <div class="reviews">
                    <h4>Reviews (0)</h4>
                    <p>★★★★★ ☆☆☆☆☆</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function changeImage(img) {
            document.getElementById("main-image").src = img.src;
        }
    </script>

</body>
</html>

