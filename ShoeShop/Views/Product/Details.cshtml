@model ShoeShop.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container">
    <h2 class="text-center">@Model.ProductName</h2>

    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Hình ảnh sản phẩm</h5>
                    @if (Model.ProductImages != null && Model.ProductImages.Any())
                    {
                        foreach (var image in Model.ProductImages)
                        {
                            <img src="@image.ImageURL" class="img-thumbnail" width="120" />
                        }
                    }
                    else
                    {
                        <img src="/images/no-image.png" class="img-thumbnail" width="120" />
                    }
                </div>
                <div class="col-md-6">
                    <p><strong>Danh mục:</strong> @Model.Category?.CategoryName</p>
                    <p><strong>Giá:</strong> @Model.Price.ToString("N0") đ</p>
                    <p><strong>Mô tả:</strong> @Model.Description</p>
                    <p><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                    <p>
                        <strong>Kích thước:</strong>
                        @if (Model.ProductSizes != null && Model.ProductSizes.Any())
                        {
                            foreach (var size in Model.ProductSizes)
                            {
                                <span class="badge bg-info">@size.Size.SizeName</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Không có kích thước</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-primary">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
