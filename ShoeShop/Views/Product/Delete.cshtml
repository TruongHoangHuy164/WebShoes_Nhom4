@model ShoeShop.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h2 class="text-danger">Xóa sản phẩm</h2>
<p class="alert alert-warning">Bạn có chắc chắn muốn xóa sản phẩm này không?</p>

<div class="card">
    <div class="card-header">
        <h4>@Model.ProductName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Danh mục:</dt>
            <dd class="col-sm-9">@Model.Category.CategoryName</dd>

            <dt class="col-sm-3">Giá:</dt>
            <dd class="col-sm-9">@Model.Price.ToString("N0") VND</dd>

            <dt class="col-sm-3">Mô tả:</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Ngày tạo:</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Hình ảnh:</dt>
            <dd class="col-sm-9">
                @if (Model.ProductImages != null && Model.ProductImages.Any())
                {
                    foreach (var image in Model.ProductImages)
                    {
                        <img src="@image.ImageURL" alt="Ảnh sản phẩm" class="img-thumbnail" width="150" />
                    }
                }
                else
                {
                    <p>Không có hình ảnh</p>
                }
            </dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.ProductID" />
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-trash"></i> Xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>

    </div>
</div>
